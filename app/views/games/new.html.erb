<h1>New game</h1>



<div class="d-flex mt-4">
  <% @letters.each do |letter| %>
    <div class="p-2 text-white bg-primary text-center mx-1" style="width: 50px; height: 50px; font-size: 24px; font-weight: bold;">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="POST" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

  <div class="mb-3 mt-3">
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group">
      <input type="text" class="form-control" name="word">
      <button class="btn btn-outline-secondary" type="submit">Play</button>
    </div>
  </div>
</form>
